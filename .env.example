# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key

# Encryption Key (generate a random 32-character string)
ENCRYPTION_KEY=your-32-character-encryption-key

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Platform Credentials (these will be encrypted and stored in Supabase)
# X (Twitter)
X_USERNAME=your-x-username
X_PASSWORD=your-x-password

# X OAuth 2.0 Credentials (for X API v2)
X_OAUTH2_CLIENT_ID=your-x-oauth2-client-id
X_OAUTH2_CLIENT_SECRET=your-x-oauth2-client-secret
CALLBACK_URL=your-ngrok-url/api/auth/callback

# Reddit
REDDIT_USERNAME=your-reddit-username
REDDIT_PASSWORD=your-reddit-password

# Quora
QUORA_EMAIL=your-quora-email
QUORA_PASSWORD=your-quora-password
